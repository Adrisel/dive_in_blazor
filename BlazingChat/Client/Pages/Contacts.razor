@page "/contacts"
@using BlazingChat.Shared
@inject HttpClient Http

<h1>Contacts List</h1>
<div>
    <ul>
        @foreach (var contact in ContactList)
        {
            <li>@contact.Name @contact.LastName</li>
        }
    </ul>
</div>


@code {
    private List<Contact> ContactList = new List<Contact>();
    private WeatherForecast[] forecasts;

    protected override async Task OnInitializedAsync()
    {
        forecasts = await Http.GetFromJsonAsync<WeatherForecast[]>("WeatherForecast");
        ContactList.Add(new Contact(1, "Adriana", "Tito"));
        ContactList.Add(new Contact(1, "Rafael", "Tito"));
        ContactList.Add(new Contact(1, "Isabel", "Ilasaca"));
        ContactList.Add(new Contact(1, "Rudy", "Tito"));
        ContactList.Add(new Contact(1, "Carla", "Tito"));
    }

}
